<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="?attr/selectableItemBackground">


    <androidx.cardview.widget.CardView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/gray_20"
            android:foreground="@drawable/ic_baseline_person_24"
            android:foregroundTint="@color/white"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/chat_room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPT 비서"
            android:textStyle="bold"
            android:textSize="15dp"
            android:maxLines="1"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/chat_room_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_60"
            android:text="내용은 이러이러한 내용입니다."
            android:maxLines="1"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_new_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_baseline_circle_24"
        android:backgroundTint="@color/chat_count_icon_red"
        android:layout_gravity="center_vertical|end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="11dp"/>

    </FrameLayout>


</LinearLayout>